scores = [80, 100, 70, 90, 40]

#1.1 total 함수 만들기 

def total(scores):
    total_score = 0
    for i in scores:
	    total_score += i
    return total_score

print(total(scores))

#1.2 total 함수 만들기

def total(scores):
    total_score = 0
    for score in scores:
        total_score += score
    return total_score

print(total(scores))


#2. average 함수 만들기.

def average(scores):
    return sum(scores) / len(scores)
    
print(average(scores))
